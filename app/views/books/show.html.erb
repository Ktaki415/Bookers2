<div class="container">
	<div class="row">
		<div class="col-md-4">

			<%= render 'users/info', user: current_user %>

			<%= render 'books/new', book: @books %>

		</div>

		<div class="col-md-8">
			<table class="table">
				<h1>Book detail</h1>

				<thead>
					<tr>
						<th>Title</th>
						<th>Opinion</th>
					</tr>
				</thead>

				<tr>
					<th>
				  		 <%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, format: 'jpeg', class: " pull-left profile-img", fallback: "no_image.jpg" %>
				  	</th>
					<th><%= @book.title %></th>
					<th><%= @book.body %></th>

					<div class="">

					<% if @book.user == current_user %>
					<td>
						<%= link_to "Edit", edit_book_path(@book), class: "btn btn-success" %>
					</td>
					<td>
						<%= link_to "Destroy", book_path(@book.id), method: :delete, data: {confirm: "本当に消しますか?"}, class: "btn btn-danger" %>
					</td>
					<% end %>
				</tr>

			</table>
		</div>
	</div>
</div>
