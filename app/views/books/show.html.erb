<div class="container">
	<div class="row">
		<div class="col-xs-3">

			<%= render 'users/info', user: @user %>

			<%= render 'books/new', book: @books %>

		</div>

		<div class="col-xs-9">
			<table class="table">
				<h1>Book detail</h1>

				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
					</tr>
				</thead>
				<tbody>
				<tr>
					<th>
						<%= link_to(user_path(@book.user), class: "text-center") do %>
				  		<%= attachment_image_tag @book.user, :profile_image, size: '30x30', format: 'jpeg', class: " pull-left profile-img", fallback: "no_image.jpg", size: '30x30' %><br><%= @book.user.name %>
				  		<% end %>
				  	</th>

					<th><%= link_to @book.title, book_path(@book) %></th>
					<th><%= @book.body %></th>

					<div class="">

					<% if @book.user == current_user %>
					<td>
						<%= link_to "Edit", edit_book_path(@book), class: "btn btn-success" %>
					</td>
					<td>
						<%= link_to "Destroy", book_path(@book.id), method: :delete, data: {confirm: "本当に消しますか?"}, class: "btn btn-danger" %>
					</td>
					<% end %>
				</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>
