<div class="container">
  <div class="row">
    <% if @book.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h2>

        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">

      <h1>Editing Book</h1>
      <%= form_for(@book) do |f| %>

        <h4>Title</h4>
          <%= f.text_field :title, autofocus: true, class: "form-control" %>
        <h4>Opinion</h4>
          <%= f.text_area :body, autofocus: true, class: "form-control" %>

          <%= f.submit 'Update Book', {class: "btn btn-primary"} %>

      <% end %>

        <%= link_to "show", book_path(@book) %>
        <%= link_to "back", books_path %>
    </div>
  </div>
</div>