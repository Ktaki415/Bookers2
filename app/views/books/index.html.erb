<div class="container">
	<div class="row">
		<div class="col-xs-3">

			<%= render 'users/info', user: @user %>
			<%= render 'books/new', book:@book %>
		</div>


		<div class="col-xs-9">
			<table class="table">
				<h1>Books</h1>
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
						<th colspan="3"></th>
					</tr>
				</thead>

				<% @books.each do |book| %>
					<tr>
						<td class="table-show">
							<%= link_to (attachment_image_tag book.user, :profile_image, :fill, 30, 30, format: 'jpeg', class: " pull-left profile-img", fallback: "no_image.jpg", size: '30x30'), user_path(book.user) %>
						</td>
						<td class="table-title">
							<%= link_to book.title,book_path(book.id) %>
						</td>
						<td class="table-body">
							<%= book.body %>
						</td>
					</tr>
				<% end %>

			</table>
		</div>
	</div>
</div>

