<% if flash[:notice] %>
	<p><%= flash[:notice]  %></p>
<% end %>

<h1>Books</h1>

<table>
	<tr>
		<th>Title</th>
		<th>Opinion</th>
		<th colspan="3"></th>
	</tr>

	<% @books.each do |book| %>
	 <tr>
	  <td>
	  	<%= link_to book.title,book_path(book) %>
	  </td>
	  <td><%= book.body %></td>
	 </tr>

	 <% end %>
</table>

<h2>New book</h2>

  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<%= form_for(@book, url: '/books') do |f| %>

	<h4>Title</h4>
	<%= f.text_field :title %>

	<h4>Opinion</h4>
	<%= f.text_area :body %>

	<%= f.submit 'Create Book' %>

<% end %>