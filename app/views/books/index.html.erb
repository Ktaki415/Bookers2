<div class="container">
	<div class="row">
		<div class="col-md-4">

			<%= render 'users/info', user: current_user %>
			<%= render 'books/new', book:@book %>
		</div>


		<div class="col-md-8">
			<table class="table">
				<h1>Books</h1>
				<thead>
					<tr>
						<th>Title</th>
						<th>Opinion</th>
						<th colspan="3"></th>
					</tr>
				</thead>

				<% @books.each do |book| %>
					<tr>
						<td class="table-show">
							<%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, format: 'jpeg', class: " pull-left profile-img", fallback: "no_image.jpg" %>
						</td>
						<td class="table-title">
							<%= link_to book.title,book_path(book) %>
						</td>
						<td class="table-body">
							<%= book.body %>
						</td>
					</tr>
				<% end %>

			</table>
		</div>
	</div>
</div>

