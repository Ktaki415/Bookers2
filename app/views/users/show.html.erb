

<div class="container">
	<div class="row">
		<div class="col-md-4">

		<%= render 'users/info', user: @user %>
		<%= render 'books/new', book: @book %>

		</div>


		<div class="col-md-8">
		<h1>Books</h1>

		<table class="table">
			<thead>
				<tr>
					<th>Title</th>
					<th>Opinion</th>
					<th colspan="3"></th>
				</tr>
			</thead>

			<% @books.each do |book| %>
				<tr>
				 	<td>
				  		<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: " pull-left profile-img", fallback: "no_image.jpg" %>
				  	</td>
				  	<td>
				  		<%= link_to book.title, book_path(book) %>
				  	</td>
				  	<td>
				  		<%= book.body %>
				  	</td>
				</tr>

			<% end %>
		</table>

		</div>
	</div>
</div>