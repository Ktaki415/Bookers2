<% if flash[:notice] %>
	<p><%= flash[:notice]  %></p>
<% end %>

<div class="container">
<div class="row">
	<div class="col-md-4">

	<%= render 'users/info', user: current_user %>
	<%= render 'books/new', book: @book %>

	</div>

</div>
</div>

<div class="container">
<div class="row">
	<div class="col-md-8">
	<h1>Books</h1>

	<table>
		<tr>
			<th>Title</th>
			<th>Opinion</th>
			<th colspan="3"></th>
		</tr>

		<% @books.each do |book| %>
		 <tr>
		  <td>
		  	<%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, format: 'jpeg', class: " pull-left profile-img", fallback: "no_image.jpg" %>
		  </td>
		  <td>
		  	<%= link_to book.title, book_path(book) %>
		  </td>
		  <td>
		  	<%= book.body %>
		  </td>
		 </tr>

		 <% end %>
	</table>

	</div>


</div>
</div>