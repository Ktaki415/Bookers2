<div class="container">
	<div class="row">
		<div class="col-xs-3">

			<%= render 'users/info', user: @user %>
			<%= render 'books/new', book: @book %>

		</div>

		<div class="col-xs-9">
			<h1>Users</h1>
			<table class="table">
				<thead>
					<tr>
						<td>Image</td>
						<td>name</td>
						<td colspan="3"></td>
					</tr>
				</thead>

				<% @users.each do |user| %>
					<tr>
						<td>
							<%= attachment_image_tag user, :profile_image, :fill, 30, 30, format: 'jpeg', class: " pull-left profile-img", fallback: "no_image.jpg", size: '30x30' %>
						</td>
						<td>
							<%= user.name %>
						</td>
						<td></td>
						<td></td>
						<td>
							<%= link_to "Show", user_path(user.id) %>
						</td>
					</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>